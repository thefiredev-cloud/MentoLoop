# MentoLoop Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values
# Never commit actual production values to version control

# ==============================================
# CONVEX DATABASE CONFIGURATION
# ==============================================
CONVEX_DEPLOYMENT=prod:your-production-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-production-convex-url.convex.cloud

# ==============================================
# AUTHENTICATION & USER MANAGEMENT
# ==============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_clerk_key
CLERK_SECRET_KEY=sk_live_your_production_clerk_secret
CLERK_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Clerk Frontend API URL (from JWT template named "convex")
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-production-clerk-frontend.clerk.accounts.dev

# Authentication Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# ==============================================
# AI SERVICES FOR MENTORFIT MATCHING
# ==============================================
OPENAI_API_KEY=sk-proj-your_production_openai_key
GEMINI_API_KEY=your_production_gemini_key

# ==============================================
# PAYMENT PROCESSING
# ==============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook

# ==============================================
# COMMUNICATION SERVICES
# ==============================================
# SendGrid Email Service
SENDGRID_API_KEY=SG.your_production_sendgrid_key
SENDGRID_FROM_EMAIL=support@mentoloop.com

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_production_twilio_sid
TWILIO_AUTH_TOKEN=your_production_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://mentoloop.com

# Email Domain Configuration
NEXT_PUBLIC_EMAIL_DOMAIN=mentoloop.com
EMAIL_DOMAIN=mentoloop.com

# ==============================================
# SECURITY & MONITORING
# ==============================================
ENABLE_SECURITY_HEADERS=true

# Error Tracking (Sentry - Optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
SENTRY_ORG=your_organization
SENTRY_PROJECT=mentoloop

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AI_MATCHING=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PAYMENT_PROCESSING=true

# ==============================================
# HEALTH MONITORING
# ==============================================
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# ==============================================
# BACKUP & RECOVERY
# ==============================================
BACKUP_WEBHOOK_URL=https://your-backup-service.com/webhook

# ==============================================
# COMPLIANCE & SECURITY
# ==============================================
# HIPAA Compliance
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555  # 7 years for healthcare records

# Session Security
SESSION_TIMEOUT_MINUTES=60
REQUIRE_2FA_FOR_ADMIN=true

# API Security
API_RATE_LIMIT_PER_MINUTE=60
CORS_ALLOWED_ORIGINS=https://mentoloop.com,https://www.mentoloop.com

# ==============================================
# DEPLOYMENT SPECIFIC
# ==============================================
# Build Configuration
BUILD_TIMEOUT=600  # 10 minutes
NODE_VERSION=22
NPM_VERSION=10

# Caching
ENABLE_STATIC_CACHING=true
CACHE_MAX_AGE=31536000  # 1 year for static assets

# CDN Configuration (if using)
CDN_URL=https://cdn.mentoloop.com

# ==============================================
# IMPORTANT SECURITY NOTES
# ==============================================
# 1. Never commit this file with actual values to version control
# 2. Use your deployment platform's secure environment variable system
# 3. Rotate API keys and secrets regularly
# 4. Enable 2FA on all service provider accounts
# 5. Monitor for unusual API usage patterns
# 6. Set up alerts for failed authentication attempts
# 7. Regularly audit access logs and permissions