# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.production and add your production values
# NEVER commit .env.production to version control
# ========================================

# Convex Production Configuration
CONVEX_DEPLOYMENT=your_production_convex_deployment
NEXT_PUBLIC_CONVEX_URL=https://your-production.convex.cloud

# Clerk Production Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_key
CLERK_SECRET_KEY=sk_live_your_production_secret
CLERK_WEBHOOK_SECRET=whsec_your_production_webhook_secret
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-production.clerk.accounts.dev

# Clerk Redirect URLs (Update with your production domain)
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# AI Services (Production Keys)
GEMINI_API_KEY=your_production_gemini_key
OPENAI_API_KEY=sk-proj-your_production_openai_key

# Stripe Production Payment Processing
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook

# Twilio Production SMS Service
TWILIO_ACCOUNT_SID=your_production_twilio_sid
TWILIO_AUTH_TOKEN=your_production_twilio_token
TWILIO_PHONE_NUMBER=+1_your_production_phone

# SendGrid Production Email Service
SENDGRID_API_KEY=SG.your_production_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@mentoloop.com

# Application Production Configuration
NEXT_PUBLIC_APP_URL=https://mentoloop.com
NEXT_PUBLIC_EMAIL_DOMAIN=mentoloop.com
EMAIL_DOMAIN=mentoloop.com
NODE_ENV=production

# Production Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Production Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PAYMENT_PROCESSING=true

# Production Monitoring & Analytics
SENTRY_DSN=https://your_production_sentry_dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=G-YOUR_PRODUCTION_ID
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# Production Database Backup
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_SCHEDULE=0 2 * * *

# Production CDN Configuration
CDN_URL=https://cdn.mentoloop.com
NEXT_PUBLIC_CDN_URL=https://cdn.mentoloop.com

# Production Cache Configuration
CACHE_TTL=3600
CACHE_REVALIDATE=60

# Production Performance Settings
MAX_CONCURRENT_USERS=10000
REQUEST_TIMEOUT_MS=30000
MAX_UPLOAD_SIZE_MB=10

# Production Deployment Settings
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_PROVIDER=vercel